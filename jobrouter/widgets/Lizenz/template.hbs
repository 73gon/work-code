<script> 
let invisibleLizenz = document.getElementById("invisibleLizenz").innerHTML;
invisibleLizenz = invisibleLizenz.slice(1, -1);
invisibleLizenz
simplifyInfoWidget();
$j('#lizenz_outerBox').parent().toggleClass('background-red', true);

function simplifyInfoWidget(){
	let outerBox = document.getElementById("lizenz_outerBox");


    let innerBox = document.createElement("div");
        innerBox.id = "indo_innerBox";
    outerBox.appendChild(innerBox);
        let logo = document.createElement("div");
            logo.setAttribute("class", "fa-solid fa-calendar-days");
            logo.id = "lizenz_logo";
        innerBox.appendChild(logo);
        let result = document.createElement("div");
            result.id = "lizenz_result";
        innerBox.appendChild(result);  
            let textadding = document.createElement("div");
                textadding.id = "lizenz_text";
                textadding.innerHTML = "Lizenz g√ºltig bis";
            result.appendChild(textadding);
            let amount = document.createElement('div');
                amount.id = "lizenz_amount";
                amount.innerHTML = convertDateFormat(invisibleLizenz);
            result.appendChild(amount);
           
}

function convertDateFormat(inputDate) {
    var parts = inputDate.split("-");
    return parts[2] + "." + parts[1] + "." + parts[0];
}
</script>

