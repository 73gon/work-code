<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.0/css/all.min.css" type="text/css">
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">

<script>
let invisLabel= JSON.parse(document.getElementById("simplibills_invisLabel").innerHTML);
let invisIncident= JSON.parse(document.getElementById("simplibills_invisIncident").innerHTML);
let invisEinheit = JSON.parse(document.getElementById("simplibills_invisEinheit").innerHTML).einheit;
let invisEinheitsnummer = JSON.parse(document.getElementById("simplibills_invisEinheit").innerHTML).einheitsnummer;
let allowedUsers = JSON.parse(document.getElementById("simplibills_invisUsernames").innerHTML);
let username = '';

simplibillsWidget();
$j('#simplibills_outerBox').parent().toggleClass('simplibills_background', true);

$j(function() {
    $j("#simplibills_username").autocomplete({
        appendTo: "#simplibills_outerBox",
        source: function(request, response) {
            let term = request.term.toLowerCase();
            let filtered = allowedUsers.filter(function(user) {
                return user.username.toLowerCase().indexOf(term) !== -1 ||
                       user.prename.toLowerCase().indexOf(term) !== -1 ||
                       user.lastname.toLowerCase().indexOf(term) !== -1;
            });
            response(filtered.map(function(user) {
                return {
                    label: user.prename + ' ' + user.lastname + ' (' + user.username + ')',
                    value: user.username
                };
            }));
        },
        minLength: 0,
        select: function(event, ui) {
            $j("#simplibills_username").val(ui.item.value);
            username = ui.item.value;
            simplibillsUpdate();
            return false;
        }
    }).on('focus', function() {
        $j(this).autocomplete("search", "");
    });
});

function simplibillsWidget(){
    let outerBox = document.getElementById("simplibills_outerBox");

    let dropDownContainer = document.createElement("div");
    dropDownContainer.setAttribute("class", "simplibills_dropDownContainer");
    outerBox.appendChild(dropDownContainer);

    let dropDown = document.createElement("select");
    dropDown.id = "simplibills_dropDown";
    dropDown.setAttribute("class", "simplibills_dropDown");
    dropDown.addEventListener("change", function() {
        simplibillsUpdate();
    });
    for (let i = 0; i < invisEinheit.length; i++) {
        let option = document.createElement("option");
        option.value = invisEinheit[i];
        option.text = invisEinheit[i];
        dropDown.appendChild(option);
    }
    dropDownContainer.appendChild(dropDown);

    let inputWrapper = document.createElement("div");
    inputWrapper.setAttribute("class", "simplibills_inputWrapper");

    let usernameInput = document.createElement("input");
    usernameInput.type = "text";
    usernameInput.id = "simplibills_username";
    usernameInput.placeholder = "Username";
    inputWrapper.appendChild(usernameInput);

    let sendButton = document.createElement("button");
    sendButton.id = "simplibills_sendButton";
    sendButton.setAttribute("class", "fa-solid fa-paper-plane");
    sendButton.addEventListener("click", function(){
        let inputVal = usernameInput.value.trim();
        if (inputVal === '' || allowedUsers.some(function(u) { return u.username === inputVal; })) {
            username = inputVal;
            simplibillsUpdate();
        } else {
            let toast = document.createElement("div");
            toast.setAttribute("id", "simplibills_toast");
            toast.innerText = "Benutzer nicht berechtigt!";
            document.getElementById("simplibills_outerBox").appendChild(toast);
            setTimeout(function(){ document.getElementById("simplibills_outerBox").removeChild(toast); }, 3000);
        }
    });
    inputWrapper.appendChild(sendButton);

    dropDownContainer.appendChild(inputWrapper);

    let gridContainer = document.createElement("div");
    gridContainer.id = "simplibills_gridContainer";
    gridContainer.setAttribute("class", "simplibills_gridContainer");
    outerBox.appendChild(gridContainer);
    simplibillsCreateTable();
}

function simplibillsCreateTable(){
    let gridContainer = document.getElementById("simplibills_gridContainer");
    gridContainer.innerHTML = "";
    let gridBoxLeft = document.createElement("div");
    gridBoxLeft.setAttribute("class", "simplibills_gridBox");
    gridContainer.appendChild(gridBoxLeft);
    let gridBoxRight = document.createElement("div");
    gridBoxRight.setAttribute("class", "simplibills_gridBox");
    gridContainer.appendChild(gridBoxRight);
    for(let i = 0; i < invisLabel.length; i++){
        let label = document.createElement("div");
        label.setAttribute("class", "simplibills_label");
        if (i === 0) {
            label.classList.add('simplibills_total-row');
        }
        if (i === invisLabel.length - 2) {
            label.classList.add('simplibills_before-payment');
        }
        if (i >= invisLabel.length - 2) {
            let match = invisLabel[i].match(/^(.+?)\s*\((.+?)\)$/);
            if (match) {
                let textSpan = document.createElement("span");
                textSpan.textContent = match[1];
                label.appendChild(textSpan);
                let tooltipWrapper = document.createElement("span");
                tooltipWrapper.setAttribute("class", "simplibills_tooltip-icon");
                label.classList.add('simplibills_has-tooltip');
                tooltipWrapper.innerHTML = '<i class="fa-solid fa-circle-info"></i>';
                let tooltipText = document.createElement("span");
                tooltipText.setAttribute("class", "simplibills_tooltip-text");
                tooltipText.textContent = match[2];
                tooltipWrapper.appendChild(tooltipText);
                label.appendChild(tooltipWrapper);
            } else {
                label.innerHTML = invisLabel[i];
            }
        } else {
            label.innerHTML = invisLabel[i];
        }
        gridBoxLeft.appendChild(label);
        let incident = document.createElement("div");
        incident.setAttribute("class", "simplibills_incident");
        if (i === 0) {
            incident.classList.add('simplibills_total-row');
        }
        if (i === invisLabel.length - 2) {
            incident.classList.add('simplibills_before-payment');
        }
        incident.innerHTML = invisIncident[i];
        gridBoxRight.appendChild(incident);
    }
}

function simplibillsUpdate() {
    let outerBox = document.getElementById("simplibills_outerBox");
    outerBox.style.opacity = '0.5';
    let loader = document.getElementById("simplibills_loader");
    loader.style.opacity = '100';

    einheit = document.getElementById("simplibills_dropDown").value;
    let einheitIndex = invisEinheit.indexOf(einheit);
    let einheitsnummer = invisEinheitsnummer[einheitIndex];
    username = document.getElementById("simplibills_username").value.trim();

    if (username !== '' && !allowedUsers.some(function(u) { return u.username === username; })) {
        loader.style.opacity = '0';
        outerBox.style.opacity = '100';
        let toast = document.createElement("div");
        toast.setAttribute("id", "simplibills_toast");
        toast.innerText = "Benutzer nicht berechtigt!";
        outerBox.appendChild(toast);
        setTimeout(function(){ outerBox.removeChild(toast); }, 3000);
        return;
    }

    $j.ajax({
        url: "dashboard/MyWidgets/Simplibills/query.php",
        type: "GET",
        data: { einheit: einheitsnummer, username: username },
        dataType: "text",
        success: function (data) {
            loader.style.opacity = '0';
            outerBox.style.opacity = '100';
            if (data === "false"){
                let toast = document.createElement("div");
                toast.setAttribute("id", "simplibills_toast");
                toast.innerText = "User existiert nicht!";
                outerBox.appendChild(toast);
                setTimeout(function(){ outerBox.removeChild(toast); }, 3000);
            }else if (!data){
                let toast = document.createElement("div");
                toast.setAttribute("id", "simplibills_toast");
                toast.innerText = "Keine Daten vorhanden!";
                outerBox.appendChild(toast);
                setTimeout(function(){ outerBox.removeChild(toast); }, 3000);
            }else{
                invisIncident = JSON.parse(data);
                simplibillsCreateTable();
            }
        },
        error: function (jqXHR, textStatus, errorThrown) {
            console.log(textStatus, errorThrown);
        }
    });
}
</script>

<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

#simplibills_outerBox{
    width: 100%;
    font-family: 'Poppins';
}

#simplibills_toast {
    position: absolute;
    bottom: 20px;
    right: 20px;
    background-color: #d9534f;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    z-index: 9999;
    opacity: 0;
    animation: fadeInOut 3s forwards;
}

@keyframes fadeInOut {
    0% { opacity: 0; transform: translateY(20px); }
    10% { opacity: 1; transform: translateY(0); }
    90% { opacity: 1; transform: translateY(0); }
    100% { opacity: 0; transform: translateY(20px); }
}

.simplibills_dropDownContainer{
    display: flex;
    justify-content: space-between;
    padding-top: 5px;
    padding-left: 10px;
    padding-right: 10px;
    gap: 10px;
}

.simplibills_dropDown{
    width: 80%;
    padding: 5px;
    font-size: 16px;
    line-height: 1.75;
    border: 1px solid #242730;
    border-radius: 5px;
    background-color: #242730;
    color: #FFCC0D;
}

.simplibills_inputWrapper {
    display: flex;
    gap: 8px;
    border: 2px solid #242730;
    border-radius: 5px;
    background-color: #242730;
    color: #FFCC0D;
}

#simplibills_username {
    width: 100%;
    font-size: 16px;
    line-height: 1.75;
    border: none;
    background: none;
}

#simplibills_sendButton {
    font-size: 16px;
    line-height: 1.75;
    border: none;
    background: none;
    cursor: pointer;
}

.simplibills_background{
    background-color: #3B3E4D;
    color: #FFCC0D;
    border: none;
}

.simplibills_gridContainer{
    display: grid;
    grid-template-columns: 70% 30%;
}

.simplibills_gridBox{
    padding: 10px;
    font-size: 16px;
    line-height: 1.75;
}

.simplibills_label{
    border-bottom: 1px solid #252730;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.simplibills_incident{
    text-align: right;
    border-bottom: 1px solid #252730;
    overflow: hidden;
    text-overflow: ellipsis;
}

.simplibills_total-row {
    border-bottom: 1px solid #FFCC0D !important;
    font-weight: bold;
}

.simplibills_before-payment {
    border-top: 1px solid #FFCC0D !important;
}

.simplibills_has-tooltip {
    overflow: visible !important;
}

.simplibills_tooltip-icon {
    position: relative;
    display: inline-block;
    cursor: pointer;
    margin-left: 5px;
}

.simplibills_tooltip-text {
    visibility: hidden;
    background-color: #242730;
    color: #FFCC0D;
    text-align: center;
    padding: 5px 10px;
    border-radius: 5px;
    position: absolute;
    z-index: 10001;
    bottom: 125%;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
    font-size: 12px;
    border: 1px solid #FFCC0D;
}

.simplibills_tooltip-icon:hover .simplibills_tooltip-text {
    visibility: visible;
}

#simplibills_outerBox .ui-autocomplete {
    background-color: #242730;
    border: 1px solid #FFCC0D;
    border-radius: 5px;
    max-height: 200px;
    overflow-y: auto;
    overflow-x: hidden;
    z-index: 10000;
    list-style: none;
    padding: 0;
    margin: 0;
}

#simplibills_outerBox .ui-menu-item {
    padding: 0;
}

#simplibills_outerBox .ui-menu-item-wrapper {
    color: #FFCC0D;
    padding: 5px 10px;
    cursor: pointer;
    font-size: 13px;
}

#simplibills_outerBox .ui-menu-item-wrapper.ui-state-active,
#simplibills_outerBox .ui-menu-item-wrapper:hover {
    background-color: #3B3E4D;
    color: #FFCC0D;
    border: none;
}

#simplibills_loader {
    position: absolute;
    top: 45%;
    left: 45%;
    transform: translate(-50%, -50%);
    border: 5px solid rgba(255, 255, 255, 0.3);
    border-top: 5px solid #FFCC0D;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    animation: spin 1s linear infinite;
    margin: 0;
    opacity: 0;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

[id^="simplibills_invis"]{
    display: none;
}
</style>

<div id="simplibills_invisIncident">{{incidents}}</div>
<div id="simplibills_invisLabel">{{labels}}</div>
<div id="simplibills_invisEinheit">{{einheit}}</div>
<div id="simplibills_invisUsernames">{{usernames}}</div>
